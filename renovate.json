{
  "extends": [
    "config:base",
    "group:linters"
  ],
  "packageRules": [  {
    "matchPackagePatterns": ["^@podium"],
    "groupName": "@podium packages"
  },
  {
    "matchDepTypes": ["dependencies"],
    "timezone": "Europe/Oslo",
    "schedule": [
      "after 12am",
      "before 4am"
    ],
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  {
    "matchDepTypes": ["devDependencies"],
    "timezone": "Europe/Oslo",
    "schedule": ["before 6am on Monday"],
    "automerge": true,
    "major": {
      "automerge": false
    }
  }]
}
